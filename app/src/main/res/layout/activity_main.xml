<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#708FC0A3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="41dp"
        android:text="Question" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupAns"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="#C42278"
        android:text="Submit" />

    <TextView
        android:id="@+id/lblComplete"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="8dp"
        android:text="Completed:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblCompleted"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblComplete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="1/3"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCompleted"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:backgroundTint="#5064D5"
        android:text="Next" />

    <RadioGroup
        android:id="@+id/radioGroupAns"
        android:layout_width="339dp"
        android:layout_height="128dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="7dp">

        <RadioButton
            android:id="@+id/radioAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer One" />

        <RadioButton
            android:id="@+id/radioAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer Two" />

        <RadioButton
            android:id="@+id/radioAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer Three" />

        <RadioButton
            android:id="@+id/radioAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer Four" />
    </RadioGroup>
</RelativeLayout>